{{ 'section-inside.css' | asset_url | stylesheet_tag }}

<section class="inside">
    <div class="container container__inside">
        <h2 class="inside__title">
            {{ section.settings.title }}
        </h2>
        <div class="inside__text">
            {{ section.settings.text }}
        </div>
        <div class="inside__list">
            <ul class="inside__item">
                {% for block in section.blocks %}
                    {% if block.type == 'list_1_item' %}
                        <li>
                            {% if block.settings.link %}
                                <a href="{{ block.settings.link }}">{{ block.settings.text }}</a>
                            {% else %}
                                <p>{{ block.settings.text }}</p>
                            {% endif %}
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
            <ul class="inside__item">
                {% for block in section.blocks %}
                    {% if block.type == 'list_2_item' %}
                        <li>
                            {% if block.settings.link %}
                                <a href="{{ block.settings.link }}">{{ block.settings.text }}</a>
                            {% else %}
                                <p>{{ block.settings.text }}</p>
                            {% endif %}
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
            <ul class="inside__item">
                {% for block in section.blocks %}
                    {% if block.type == 'list_3_item' %}
                        <li>
                            {% if block.settings.link %}
                                <a href="{{ block.settings.link }}">{{ block.settings.text }}</a>
                            {% else %}
                                <p>{{ block.settings.text }}</p>
                            {% endif %}
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
        <a href="{{ section.settings.button_link }}" class="inside__btn btn-primary">{{ section.settings.button_text }}</a>
    </div>
</section>


