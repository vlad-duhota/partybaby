{{ 'section-cta3.css' | asset_url | stylesheet_tag }}


<div class="cta3">
    <div class="cta3__container container">
        <div class="cta3__inner">
            <div class="cta3__content">
                <h2 class="cta3__title">{{ section.settings.title  }}</h2>
                <div class="text cta3__text">
                    {{section.settings.text}}
                </div>
            </div>

            <form action="/contact" method="post" accept-charset="UTF-8" class="custom-form" enctype="multipart/form-data">
            <input type="hidden" name="form_type" value="contact">
            <input type="hidden" name="utf8" value="âœ“">
        
            <!-- Name Field -->
            <label for="contact-name">Name</label>
            <input type="text" id="contact-name" name="contact[name]" required>
        
            <!-- Email Field -->
            <label for="contact-email">Email</label>
            <input type="email" id="contact-email" name="contact[email]" required>
        
            <!-- Message Field -->
            <label for="contact-message">Message</label>
            <textarea id="contact-message" name="contact[body]" rows="4" required></textarea>
        
            <!-- Submit Button -->
            <button type="submit">Submit</button>
          </form>
            <div class="cta3__form">
                {% for block in section.blocks %}
                    {% case block.type %}
                      {% when '@app' %}
                        {% render block %}
                    {% endcase %}
                  {% endfor %}
            </div>
        </div>
    </div>
</div>

{% schema %}
    {
    "name": "CTA 3",
    "tag": "section",
    "class": "section",
    "disabled_on": {
    "groups": ["header", "footer"]
    },
    "settings": [
    {
    "type": "text",
    "id": "title",
    "label": "Title"
    },
    {
    "type": "richtext",
    "id": "text",
    "label": "Text"
    },
    ],
    "presets": [
    {
    "name": "CTA 3",
    "settings": {
      
    }
    }
    ],
    "blocks": [
        {
            "type": "@app"
        }
        ]
    }
    {% endschema %}