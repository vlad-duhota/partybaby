{{ 'footer.css' | asset_url | stylesheet_tag }}

<footer class="footer">
    <div class="container">
        <div class="footer__cols">
          <div class="footer__col footer__col--1">
            <h3>{{ section.settings.title }}</h3>
            <div class="text">{{ section.settings.text }}</div>
          </div>
          <div class="footer__col footer__col--2">
            <h3>{{ section.settings.quick }}</h3>

            <ul class="footer__menu">
              {% for link in section.settings.quick_links.links -%}
                <li class="footer__menu-item">
                  {{ link.title | link_to: link.url }}
                </li>
              {%- endfor %}
            </ul>
          </div>
          <div class="footer__col footer__col--3">
            <h3>{{ section.settings.contact }}</h3>
            <div class="text">
              <a href="mailto:{{ section.settings.contact_email }}">{{ section.settings.contact_email }}</a> for injuries
            </div>

            <ul class="footer__socials">
              {% for block in section.blocks %}  
                {% case block.type %}
                  {% when 'social_link' %}  
                    <li class="footer__socials-item">
                      <a href="{{ block.settings.url }}">
                        {{ block.settings.image | image_url: width: 29 | image_tag:
                        width: block.settings.image.width,
                        alt: block.settings.image.alt | escape }}
                      </a>
                    </li>
                {% endcase %} 
              {% endfor %}
            </ul>
          </div>
        </div>
        <div class="footer__privacy">
          <ul class="footer__privacy-list">
            {% for link in section.settings.privacy_links.links -%}
              <li>
                {{ link.title | link_to: link.url }}
              </li>
            {%- endfor %}
          </ul>
          <div class="footer__privacy-text">
            <p>&copy; {{  "now" | date: '%Y' }} {{ section.settings.privacy_text }} </p>
          </div>
        </div>

        {{ section.settings.image | image_url: width: 404 | image_tag:
        width: section.settings.image.width,
        class: 'footer__img'
        alt: section.settings.image.alt | escape }}
    </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "id": "title",
      "type": "text",
      "label": "Title"
    },
    {
      "id": "text",
      "type": "richtext",
      "label": "Text"
    },
    {
      "id": "quick",
      "type": "text",
      "label": "Quick links"
    },
    {
      "id": "quick_links",
      "type": "link_list",
      "label": "Quick links list"
    },
    {
      "id": "contact",
      "type": "text",
      "label": "Contact"
    },  
    {
      "id": "contact_email",
      "type": "text",
      "label": "Contact email"
    },
    {
      "id": "privacy_links",
      "type": "link_list",
      "label": "Privacy links list"
    },

    {
      "id": "privacy_text",
      "type": "text",
      "label": "Privacy text"
    },
    {
      "id": "image",
      "type": "image_picker",
      "label": "Decoration image"
    },
  ],
  "blocks": [
            {
            "type": "social_link",
            "name": "Social link",
            "settings": [
                {
                "id": "image",
                "type": "image_picker",
                "label": "Social icon"
                },
                {
                "id": "url",
                "type": "url",
                "label": "Social url"
                },
            ]
            },
    ]
}
{% endschema %}
